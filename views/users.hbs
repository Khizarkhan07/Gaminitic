<table class="table">
    <thead>
    <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Role</th>
        <th>Details</th>
    </tr>
    </thead>
    <tbody>
    {{#each users}}
        <tr>
            <td>
                {{this.name}}
            </td>
            <td>
                {{this.email}}
            </td>
            <td>
                {{this.role}}
            </td>
            <td>
                <a type="button" href="/get_user/{{this._id}}">View</a>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>