
<div class="content-header row" style="margin: 10px;">
    <div class="content-header-left col-md-6 col-12 mb-2">
        <h3 class="content-header-title">
            View admin</h3>
        <div class="row breadcrumbs-top">
            <div class="breadcrumb-wrapper col-12">
                <ol id="crumbs" class="breadcrumb">
                    <li class="breadcrumb-item"><a href="">Home</a>
                    </li>
                    <li class="breadcrumb-item">Admin
                    </li>
                </ol>
            </div>
        </div>
    </div>
</div>


<table id="user-table" class="table table-striped table-bordered" style="width:100%">
    <thead>
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Details</th>
    </tr>
    </thead>
    <tbody>
    {{#each users}}
        <tr>
            <td>

            </td>
            <td>
                {{this.name}}
            </td>
            <td>
                {{this.email}}
            </td>
            <td>
                {{this.role}}
            </td>
            <td>
                <a id="single-user" onclick="myFunction()" type="button" href="/user/{{this._id}}">View</a>
            </td>
        </tr>
    {{/each}}

    </tbody>
    <tfoot>
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Details</th>
    </tr>
    </tfoot>
</table>
