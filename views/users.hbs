<table id="user-table" class="table table-striped table-bordered" style="width:100%">
    <thead>
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Details</th>
    </tr>
    </thead>
    <tbody>
    {{#each users}}
        <tr>
            <td>
                {{this.name}}
            </td>
            <td>
                {{this.email}}
            </td>
            <td>
                {{this.role}}
            </td>
            <td>
                <a type="button" href="/get_user/{{this._id}}">View</a>
            </td>
        </tr>
    {{/each}}

    </tbody>
    <tfoot>
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Details</th>
    </tr>
    </tfoot>
</table>